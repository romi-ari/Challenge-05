<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>cars backend</title>

    <link rel="stylesheet" href="./style.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>

<body>

    <!-- ini contoh, silahkan diedit -->
    <div class="result-container py-5">
        <div class="container">
            <div class="my-3">
                <a href="/create" class="btn btn-primary">Add New Car</a>
            </div>
            <div id="cars-container" class="row">
                <% cars.forEach(car=> { %>
                    <div class="col-md-3 col-sm-6 col-12 my-2 d-flex align-items-stretch">
                        <div class="card w-100">
                            <div class="card-body d-flex flex-column">
                                <img src="<%= car.image %>" alt="<%= car.image %>"
                                    style="width:100%; height:150px; object-fit:cover;">
                                <p><b>
                                        <%= car.name %>
                                    </b></p>
                                <p>
                                    <%= car.size %>
                                </p>
                                <p><i class="bi bi-calendar me-2"></i>Harga Sewa / hari <%= car.price %>
                                </p>
                                <a href="/update/<%= car.id%>" class="btn btn-success w-100 mt-auto">Update</a>
                                <form action="/delete?_method=DELETE" method="POST">
                                    <input type="hidden" name="id" value="<%= car.id %>">
                                    <input type="hidden" name="image" value="<%= car.image %>">
                                    <button type="submit" class="btn btn-danger w-100 mt-2"
                                        onclick="return confirm('Yakin?')">Hapus</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.10.4/gsap.min.js"></script>

    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>


</body>

</html>